{{>layout/header}}

<h1>회원 가입</h1>

<h3>회원 정보 입력</h3>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="username">로그인 ID</label>
                <input type="text" class="form-control" id="username" placeholder="제목을 입력하세요">
            </div>
            <div class="form-group">
                <label for="nickname"> 별명 </label>
                <input type="text" class="form-control" id="nickname" placeholder="작성자를 입력하세요">
            </div>
            <div class="form-group">
                <label for="email"> 이메일 </label>
                <textarea class="form-control" id="email" placeholder="내용을 입력하세요"></textarea>
            </div>
            <div class="form-group">
                <label for="password"> 비밀번호 </label>
                <textarea class="form-control" id="password" placeholder="내용을 입력하세요"></textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-signup">회원가입</button>
    </div>
</div>

{{>layout/footer}}